{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",

  "width": 550,
  "height": 400,

  "data": {
    "url": "../data/visualization2/data.csv"
  },

  "encoding": {
    "y": {"field": "Touchpoint A", "type": "ordinal", "sort": ["Rx", "Rx + OD", "OD", "∅"], "title": null, "axis": {"labelFontSize": 15}},
    "x": {"field": "Touchpoint B", "type": "ordinal", "sort": ["∅", "Jail", "Jail + HD", "HD"], "title": null, "axis": {"labelAngle": 0, "labelFontSize": 15}}
  },

  "layer": [
    {
      "selection": {"highlight": {"type": "single"}},
      "mark": {"type": "point", "strokeWidth": 2},
      "encoding": {
        "tooltip": [
          {
            "field": "Touchpoint A",
            "title": "Touchpoint A",
            "type": "ordinal"
          },
          {
            "field": "Touchpoint B",
            "title": "Touchpoint B",
            "type": "ordinal"
          },
          {
            "field": "Deaths",
            "title": "Deaths",
            "type": "ordinal"
          }
        ],
        "size": {"field": "Deaths", "type": "quantitative", "scale": {"range": [0, 4000]}, "legend": {"values": [20, 100, 200, 400, 800]}},
        "fill": {"value": "#4682b4"}
      }
    },
    {
      "mark": {"type": "text", "dy": -40},
      "encoding": {
        "text": {"field": "Set", "type": "nominal"}
      }
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 0
      },
      "encoding": {
        "text": {"field": " ", "type": "ordinal"},
        "fill": {
          "field": " ",
          "type": "ordinal",
          "legend": {
            "values": ["Rx: Opioid Prescription", "OD: Overdose", "Jail: Incarceration", "HD: Health Data"],
            "symbolOffset": -15
          }
        }
      }
    }
  ],

  "config": {
    "scale": {
      "bandPaddingInner": 0,
      "bandPaddingOuter": 0
    },
    "view": {"step": 40},
    "axis": {
      "domain": false
    }
  }
}