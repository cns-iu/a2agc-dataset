{
	"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
	"padding": {"top": 50},
  
	"config": {
		"mark": {
			"tooltip": null
		},
	    "view": {
      		"stroke": "transparent"
    	}
	},
	"autosize": {
    "contains": "padding"
  },
	"background": "#ffffff",

	"data": {
		"url": "assets/generated/visualization4/data.csv"
	},
	"vconcat": [
		{
			"spacing": 40,
			"hconcat": [
				{
					"transform": [
						{
							"filter": {"param": "pts"}
						},

						{
							"filter": {"param": "year_selection"}
						},
						{
							"joinaggregate": [
								{
									"as": "TOTAL_DEATHS",
									"field": "CASE_NUMBER",
									"op": "distinct"
								}
							],
							"groupby": [
								"AGE_GROUP",
								"YEAR"
							]
						},
						{
							"as": "deaths_max69",
							"calculate": "min(69, datum.TOTAL_DEATHS)"
						},
						{
							"calculate": "['#d4eeb4', '#a9ddb7', '#74c9bd', '#45b4c2', '#2997be', '#2173b1', '#234ea0'][datum.deaths_binned/10]",
							"as": "color"
						},
						{
							"bin": {
								"anchor": 0,
								"maxbins": 7,
								"step": 10,
								"extent": [0, 69]
							},
							"field": "deaths_max69",
							"as": "deaths_binned"
						},
						{
							"as": "group",
							"calculate": "if(toString(10 * datum.AGE_GROUP) < 70, toString(10 * datum.AGE_GROUP) + \"-\" + toString(10 * datum.AGE_GROUP + 9), '70>')"
						}
					],
					"title": {
						"text": "All Substances",
						"offset": 20,
						"fontSize": 14
					},
					"width": 450,
					"height": 175,
					"mark": "rect",
					"encoding": {
						"color": {
							"condition": {
								"param": "deaths_binned",
								"field": "deaths_binned",
								"type": "nominal",
								"scale": {"range": {"field": "color"}},
								"legend": null
							},
							"value": "white"
						},
						"tooltip": [
							{
								"field": "TOTAL_DEATHS",
								"title": "Deaths",
								"type": "ordinal"
							},
							{
								"field": "group",
								"title": "Age Group",
								"type": "ordinal"
							},
							{
								"field": "YEAR",
								"title": "Year",
								"type": "ordinal"
							}
						],
						"x": {
							"field": "YEAR",
							"title": "Year",
							"type": "ordinal",
							"axis": {
								"labelAngle": 0
							},
							"scale": {
								"domain": [
									2010,
									2011,
									2012,
									2013,
									2014,
									2015,
									2016,
									2017,
									2018
								]
							}
						},
						"y": {
							"axis": {
								"labels": true
							},
							"field": "group",
							"title": "Age Group",
							"type": "ordinal",
							"scale": {
								"reverse": true,
								"domain": [
									"0-9",
									"10-19",
									"20-29",
									"30-39",
									"40-49",
									"50-59",
									"60-69",
									"70>"
								]
							}
						}
					}
				},
				{
					"transform": [
						{
							"filter": {
								"param": "pts"
							}
						},
						{
							"filter": {
								"param": "year_selection"
							}
						},
						{
							"joinaggregate": [
								{
									"as": "TOTAL_DEATHS",
									"field": "CASE_NUMBER",
									"op": "distinct"
								}
							],
							"groupby": [
								"AGE_GROUP",
								"YEAR"
							]
						},
						{
							"as": "deaths_max69",
							"calculate": "min(69, datum.TOTAL_DEATHS)"
						},
						{
							"bin": {
								"anchor": 0,
								"maxbins": 7,
								"step": 10,
								"extent": [0, 69]
							},
							"field": "deaths_max69",
							"as": "deaths_binned"
						},
						{
							"as": "group",
							"calculate": "if(toString(10 * datum.AGE_GROUP) < 70, toString(10 * datum.AGE_GROUP) + \"-\" + toString(10 * datum.AGE_GROUP + 9), '70>')"
						}
					],
					"width": 450,
					"height": 175,
					"title": {
						"text": "All Substances",
						"offset": 20,
						"fontSize": 14
					},
					"encoding": {
						"tooltip": [
							{
								"aggregate": "distinct",
								"field": "CASE_NUMBER",
								"type": "quantitative",
								"title": "Total Deaths"
							},
							{
								"field": "group",
								"title": "Age Group",
								"type": "ordinal"
							}
						]
					},
					"layer": [
						{
							"mark": "bar",
							"encoding": {
								"x": {
									"aggregate": "distinct",
									"field": "CASE_NUMBER",
									"type": "quantitative",
									"title": "# Total Deaths",
									"axis": {
										"domainColor": "#757575",
										"tickColor": "#757575",
										"labelColor": "#212121"
									}
								},
								"y": {
									"axis": {
										"labels": true,
										"domainColor": "#757575",
										"tickColor": "#757575",
										"labelColor": "#212121"
									},
									"field": "group",
									"title": "Age Group",
									"type": "ordinal",
									"scale": {
										"reverse": true,
										"domain": [
											"0-9",
											"10-19",
											"20-29",
											"30-39",
											"40-49",
											"50-59",
											"60-69",
											"70>"
										]
									}
								},
								"stroke": {
									"value": "black"
								},
								"strokeWidth": {
									"value": 1
								},
								"opacity": {"condition": {"param": "deaths_binned", "value": 0}, "value": 1},
								"color": {"value": "white"}
							}
						},
						{
							"transform": [
								{
									"filter": {"param": "deaths_binned"}
								}
							],
							"mark": "bar",
							"encoding": {
								"x": {
									"aggregate": "distinct",
									"field": "CASE_NUMBER",
									"type": "quantitative"
								},
								"y": {
									"field": "group",
									"title": "Age Group",
									"type": "ordinal"
								},
								"strokeWidth": {"value": 0},
								"color": {
									"condition": {
										"param": "deaths_binned",
										"field": "deaths_binned",
										"type": "nominal",
										"legend": null
									},
									"value": "white"
								}
							}
						},
						{
							"mark": "bar",
							"encoding": {
								"x": {
									"aggregate": "distinct",
									"field": "CASE_NUMBER",
									"type": "quantitative"
								},
								"y": {
									"field": "group",
									"title": "Age Group",
									"type": "ordinal"
								},
								"stroke": {
									"value": "black"
								},
								"strokeWidth": {
									"value": 1
								},
								"opacity": {"condition": {"param": "deaths_binned", "value": 1}, "value": 0},
								"color": {"value": "white"}
							}
						}
					]
				}
			]
		},
		{
			"spacing": 70,
			"hconcat": [
				{
					"mark": "line",
					"width": 580,
					"height": 175,
					"title": {
						"text": "Update Graphs Using Filters Below",
						"anchor": "start",
						"offset": 30,
						"fontSize": 14
					},
					"encoding": {
						"color": { "value": "#6ea7ef" },
						"x": {
							"field": "YEAR",
							"type": "quantitative",
							"title": "Year",
							"scale": {"nice": false, "domain": [2010, 2018.75]},
							"axis": {
								"tickColor": "#757575",
								"domainColor": "#757575",
								"labelFlush": false,
								"labelAngle": 0,
								"labelExpr": "[datum.value%1 == 0 ? datum.value : '']",
								"gridDash": {
                  					"condition": {
										"test": "(datum.value+.5)%1 == 0",
										"value": [2,2]
									},
				  					"value": []
                				},
								"gridColor": {
									"condition": {
										"test": "datum.value%1 == 0",
										"value": "#BDBDBD"
									},
									"value": "#e0e0e0"
								}
							}
						},
						"y": {
							"field": "TOTAL_DEATHS",
							"type": "quantitative",
							"title": "# Deaths",
							"axis": {
								"gridColor": "#e0e0e0",
								"tickColor": "#757575",
								"domainColor": "#757575",
								"gridOpacity": {
									"condition": {"test": {"field": "index", "equal": 1}, "value": 0},
									"value": 1
								},
								"tickOpacity": {
									"condition": {"test": {"field": "index", "equal": 1}, "value": 0},
									"value": 1
								},
								"labelFontSize": {
									"condition": {"test": {"field": "index", "equal": 1}, "value": 0},
									"value": 10
								}
							}
						}
					},
					"params": [
            {
              "name": "year_selection",
              "select": {
                "type": "interval",
                "encodings": ["x"],
							  "mark": {"fill": "#6ea7ef", "fillOpacity": 0.15}
              }
            }
          ],
					"transform": [
						{
							"aggregate": [
								{
									"as": "TOTAL_DEATHS",
									"field": "CASE_NUMBER",
									"op": "distinct"
								}
							],
							"groupby": ["YEAR"]
						}
					]
				},
				{
					"spacing": 0,
					"hconcat": [
						{
							"height": 175,
							"data": {
								"sequence": {
									"start": 0,
									"stop": 65,
									"step": 10,
									"as": "deaths_binned"
								}
							},
							"transform": [
								{
								"calculate": "if(datum.deaths_binned < 60, datum.deaths_binned + '-' + (datum.deaths_binned + 9), '60>')",
								"as": "label"
								}
							],
							"mark": "rect",
							"width": 50,
              "params": [
                {
                  "name": "deaths_binned",
                  "select": {
                    "type": "point",
                    "fields": [
                      "deaths_binned"
                    ]
                  }
                },
                {
                  "name": "label",
                  "select": {
                    "type": "point",
                    "fields": [
                      "label"
                    ]
                  }
                }
              ],              
							"encoding": {
                "tooltip": {
                  "value": "Shift-Click to add more than one item"
                },
								"x": {
									"type": "nominal",
									"field": "YEAR",
									"title": "# Deaths",
									"axis": {
										"labels": false,
										"ticks": false,
										"domain": false,
										"titlePadding": 20
									}
								},
								"y": {
									"field": "deaths_binned",
									"type": "ordinal",
									"scale": {"reverse": true},
									"axis": {
										"orient": "right",
										"ticks": false,
										"domain": false,
										"labels": false,
										"title": null ,
										"labelFontSize": 12
									}
								},
								"stroke": {"value": "white"},
								"strokeWidth": {"value": 2},
								"color": {
									"legend": null,
									"field": "deaths_binned",
									"scale": {
										"scheme": "yellowgreenblue"
									}
								}
							}
						},
						{
							"layer": [
								{
									"height": 175,
									"data": {
										"sequence": {
											"start": 0,
											"stop": 65,
											"step": 10,
											"as": "deaths_binned"
										}
									},
									"transform": [
										{
										"calculate": "if(datum.deaths_binned < 60, datum.deaths_binned + '-' + (datum.deaths_binned + 9), '60>')",
										"as": "label"
										}
									],
									"mark": {
										"type": "text",
										"fontStyle": "bold"
									},
									"encoding": {
										"color": {
											"value": "white",
											"condition": {
												"param": "label", "value": "black", "empty": false
											}
										},
										"text": {
											"type": "ordinal",
											"field": "label"
										},
										"y": {
											"type": "ordinal",
											"field": "deaths_binned",
											"axis": null,
											"scale": { "reverse": true }
										}
									}
								},
								{
									"data": {
										"sequence": {
											"start": 0,
											"stop": 65,
											"step": 10,
											"as": "deaths_binned"
										}
									},
									"transform": [
										{
										"calculate": "if(datum.deaths_binned < 60, datum.deaths_binned + '-' + (datum.deaths_binned + 9), '60>')",
										"as": "label"
										}
									],
									"mark": {
										"type": "text"
									},
									"encoding": {
										"text": {
											"type": "ordinal",
											"field": "label"
										},
										"y": {
											"type": "ordinal",
											"field": "deaths_binned",
											"axis": null,
											"scale": { "reverse": true }
										}
									}
								}
							]
						}
					]
				},
				{
					"data": {
						"values": [
							{
								"SUBSTANCE_NAME": "Heroin",
								"SEX": "M"
							},
							{
								"SUBSTANCE_NAME": "Heroin",
								"SEX": "F"
							},
							{
								"SUBSTANCE_NAME": "Methamphetamine",
								"SEX": "M"
							},
							{
								"SUBSTANCE_NAME": "Methamphetamine",
								"SEX": "F"
							},
							{
								"SUBSTANCE_NAME": "Fentanyl",
								"SEX": "M"
							},
							{
								"SUBSTANCE_NAME": "Fentanyl",
								"SEX": "F"
							},
							{
								"SUBSTANCE_NAME": "Any Opioid",
								"SEX": "M"
							},
							{
								"SUBSTANCE_NAME": "Any Opioid",
								"SEX": "F"
							},
							{
								"SUBSTANCE_NAME": "Benzodiazepine",
								"SEX": "M"
							},
							{
								"SUBSTANCE_NAME": "Benzodiazepine",
								"SEX": "F"
							},
							{
								"SUBSTANCE_NAME": "Cocaine",
								"SEX": "M"
							},
							{
								"SUBSTANCE_NAME": "Cocaine",
								"SEX": "F"
							},
							{
								"SUBSTANCE_NAME": "Prescription Opioid",
								"SEX": "M"
							},
							{
								"SUBSTANCE_NAME": "Prescription Opioid",
								"SEX": "F"
							}
						]
					},
					"transform": [
						{
							"calculate": "if(datum.SEX == 'F', 'Female', 'Male')",
							"as": "sex_label"
						},
						{
							"calculate": "if(datum.SEX == 'F', 1, 2)",
							"as": "count"
						}
					],
					"mark": "rect",
					"width": 80,
					"height": 175,
					"params": [
            {
              "name": "pts",
              "select": {
                "type": "point",
							  "fields": [
								  "SUBSTANCE_NAME",
								  "SEX"
							  ]
              }
            }
          ],
					"encoding": {
						"tooltip": {
							"value": "Shift-Click to add more than one item"
						},
						"x": {
							"field": "sex_label",
							"title": "Sex",
							"type": "ordinal",
							"scale": {"reverse": true},
							"axis": {
								"domainColor": "#757575",
								"tickColor": "#757575",
								"domainWidth": 2,
								"labelAngle": 0
							}
						},
						"y": {
							"field": "SUBSTANCE_NAME",
							"title": "Substance Name",
							"type": "ordinal",
							"axis": {
								"domainColor": "#757575",
								"tickColor": "#757575",
								"domainWidth": 2
							}
						},
						"stroke": {"value": "white"},
						"strokeWidth": {"value": 2},
						"color": {
							"condition": {
								"legend": null,
								"param": "pts",
								"field": "count",
								"type": "quantitative",
								"scale": {"range": ["#DA5E8C", "#586CBB"]}
							},
							"value": "#e0e0e0"
						}
					}
				}
			]
		}
	]
}
