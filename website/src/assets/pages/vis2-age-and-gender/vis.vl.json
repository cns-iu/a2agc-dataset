                    "axis": {
                      "title": "Percent",
                      "titleX": 100,
                      "titleY": 30,
                      "format": "1%",
                      "grid": false,
                      "labelFlush": false,
                      "labels": true,
                      "titleFontSize": 14
                    }
                  },
                  "y": {
                    "title": null,
                    "type": "nominal",
                    "field": "age_group",
                    "axis": {"labels": false}
                  },
                  "color": {
                    "field": "gender",
                    "title": "Filter by",
                    "legend": {
                      "symbolStrokeColor": "black",
                      "clipHeight": 12,
                      "rowPadding": 10,
                      "orient": "left",
                      "values": ["Male", "Female", "Total Population"]
                    },
                    "scale": {"range": ["#DA5E8C", "#586CBB"]}
                  },
                  "opacity": {
                    "condition": {"selection": "gender", "value": 1},
